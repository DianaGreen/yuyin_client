.device-list {
  width: 586rpx;
  height: 146rpx;
  margin: 0 auto;
  position: relative;
  margin-top: 30rpx;
  overflow: hidden;
}
.device-list::after {
  content: '';
  position: absolute;
  width: 586rpx;
  height: 2rpx;
  background-color: #e1e1e1;
  top: 145rpx;
  left: 0rpx;
}

.device-list image {
  width: 80rpx;
  height: 80rpx;
}

.device-list .name {
  position: absolute;
  /* top: 5rpx; */
  left: 150rpx;
  font-size: 35rpx;
}

.device-list .data {
  position: absolute;
  top: 50rpx;
  left: 150rpx;
  font-size: 30rpx;
}

.device-btn {
  position: relative;
  width: 365rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
  letter-spacing: 5rpx;
  background: linear-gradient(to right, #5be2d6, #54d1ff);
  border: 0;
  border-radius: 50rpx;
  -webkit-box-shadow: 0px 0px 10px #e0e0e0;
  box-shadow: 0px 0px 10px #e0e0e0;
}
